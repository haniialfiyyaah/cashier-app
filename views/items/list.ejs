<%- include ('../partial/header') -%>


  <body>
    <h1 class="hsatu">LIST ITEMS</h1>
    <table class="table table-bordered table-dark">
      <thead>
        <th>No</th>
        <th>Nama</th>
        <th>Stock</th>
        <th>Price</th>

      </thead>
      <tbody>
        <% if (data) { %>
          <% data.forEach((item, i)=> { %>
            <tr>
              <td>
                <%= i + 1 %>
              </td>
              <td>
                <%= item.name %>
              </td>
              <td>
                <%= item.stock %>
              </td>
              <td>
                <%= item.price %>
              </td>
            </tr>
            <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="4">Empty Data</td>
                </tr>
                <% } %>
      </tbody>
    </table>

  </body>

  </html>